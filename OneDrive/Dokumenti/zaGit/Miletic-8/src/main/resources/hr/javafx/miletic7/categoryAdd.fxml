<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.javafx.miletic7.CategoryAddController">
    <fx:include source="izbornik.fxml" />
   <GridPane layoutX="2.0" layoutY="26.0" prefHeight="371.0" prefWidth="594.0">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <Label text="Add category" GridPane.columnSpan="2" GridPane.halignment="CENTER">
            <font>
               <Font size="24.0" />
            </font>
         </Label>
         <Button mnemonicParsing="false" onAction="#addNewCategory" text="Add" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
         <Label text="Name:" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
            <GridPane.margin>
               <Insets right="5.0" />
            </GridPane.margin>
         </Label>
         <Label text="Description:" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
            <GridPane.margin>
               <Insets right="5.0" />
            </GridPane.margin>
         </Label>
         <TextField fx:id="nameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
               <Insets left="5.0" right="5.0" />
            </GridPane.margin>
         </TextField>
         <TextField fx:id="descTextField" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <GridPane.margin>
               <Insets left="5.0" right="5.0" />
            </GridPane.margin>
         </TextField>
      </children>
   </GridPane>
</AnchorPane>
